<html><head>
  <%= stylesheet_link_tag :all, :cache => true, :media => 'all' %>
  <%= javascript_include_tag :all, :cache => true %>
  <title>Orbitel CRM <%= RAILS_ENV == 'production' ? '' : "[#{RAILS_ENV[0..2]}]" -%> <%= @title ? ":: #@title" : '' -%></title>
</head><body>

<%= render :partial => 'users/user_bar' %>
<%= logged_in? ? render('shared/menu') : '<div>&nbsp;</div>' %>

<%- if flash -%>
  <% if flash[:error] %>
    <div class="error"><%= h flash[:error] %></div>
  <% end %>

  <% if flash[:error_html] %>
    <div class="error"><%= flash[:error_html] %></div>
  <% end %>

  <% if flash[:notice] %>
    <div id="notices" class="notice"><%= h flash[:notice] %></div>
    <%= javascript_tag(visual_effect(:highlight, "notices", :duration => 0.75)) %>
  <% end %>
<%- end -%>

<div class="content">
<%= yield %>
</div>

