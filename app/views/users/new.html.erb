<h2>Users :: new</h2>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
  <p><%= label_tag 'user_type', I18n.t(:type) %><br/>
  <%= f.select :type, current_user.class::CAN_MANAGE %></p>

  <p><%= label_tag 'user_login', I18n.t(:login) %><br/>
  <%= f.text_field :login %></p>

  <p><%= label_tag 'user_email', I18n.t(:email) %><br/>
  <%= f.text_field :email %></p>

  <p><%= label_tag 'user_password', I18n.t(:password) %><br/>
  <%= f.password_field :password %></p>

  <p><%= label_tag 'user_password_confirmation', I18n.t(:password_confirmation) %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= submit_tag 'Create' %></p>
<% end -%>
