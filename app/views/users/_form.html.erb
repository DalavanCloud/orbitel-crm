<% form_for @user do |f| -%>
  <%= f.error_messages %>

  <p><%= f.label :type %><br/>
  <%= f.select :type, can_manages_for_select %></p>

  <p><%= f.label :dept, 'Отдел' %><br/>
  <%= f.select :dept_id, depts_for_select %></p>

  <p><%= f.label :login %><br/>
  <%= f.text_field :login %></p>

  <p><%= f.label :name %><br/>
  <%= f.text_field :name %></p>

  <!--p><%= f.label :email %><br/>
  <%= f.text_field :email, :autocomplete => 'off' %></p-->

  <p><%= f.label :male, "Пол" %><br/>
  <%= f.select :male, [['Мужской',true], ['Женский',false], ['Неопределен O_o',nil]] %></p>

  <p><%= f.label :password %><br/>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p>
    <%= f.check_box :deleted %>
    <%= f.label :deleted, 'Пользователь удален' %><br>
    <small style="padding-left:20px; color:gray">(удаленные пользователи не могут входить в систему)</small>
  </p>

  <p><%= submit_tag %></p>
<% end -%>
