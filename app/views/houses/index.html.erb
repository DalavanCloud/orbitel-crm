<h2>Houses</h2>
<table class="t1">
  <tr>
    <th>Улица</th>
    <th>Дом</th>
    <th>Интернет</th>
    <th>Создан</th>
  </tr>
  <% for house in @houses %> 
    <tr>
      <td><%= h house.street.name %></td>
      <td align="right"><%= h house.number %></td>
      <%= status_tag house, :inet, :td %>
      <td style="font-size: 7pt; color:gray"><%= time_ago_in_words house.created_at %> ago</td>
    </tr>
  <% end %> 
</table>

<p>
  <%= link_to 'Create new', new_house_path %>
</p>

