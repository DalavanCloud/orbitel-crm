<% if @ticket.vlan.blank? %>
  <font color="red">VLAN не назначен</font>
<% else %>
  <%= h @ticket.vlan %>
<% end %>

<% if @ticket.assignee == current_user %>
  <%= link_to_remote image_tag('edit.png'), 
    :update   => 'vlan_content',
    :html     => { :class => 'toolbox' },
    :url      => { :controller => 'tickets/connection_tickets', :action => 'vlan_edit', :id => @ticket }
  %>
<% end %>
